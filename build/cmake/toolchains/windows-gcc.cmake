set(
  TOOLCHAIN_TARGET
  "x86_64-pc-elf"
  CACHE STRING
  "GCC Toolchain Target Prefix"
)

set(
  TOOLCHAIN_ARCH
  "x86"
  CACHE STRING
  "GCC Toolchain Architecture"
)

set(TOOLCHAIN_PREFIX "${TOOLCHAIN_TARGET}")

set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR "${TOOLCHAIN_ARCH}")
set(CMAKE_C_COMPILER "${TOOLCHAIN_PREFIX}-gcc.exe")
set(CMAKE_CXX_COMPILER "${TOOLCHAIN_PREFIX}-g++.exe")
set(CMAKE_LINKER "${TOOLCHAIN_PREFIX}-gcc.exe" CACHE FILEPATH "Linker")
set(CMAKE_EXE_LINKER "${TOOLCHAIN_PREFIX}-gcc.exe" CACHE FILEPATH "Executable Linker")
set(CMAKE_AR "${TOOLCHAIN_PREFIX}-ar.exe" CACHE FILEPATH "Archiver")
set(CMAKE_RANLIB "${TOOLCHAIN_PREFIX}-ranlib.exe" CACHE FILEPATH "Ranlib")
set(CMAKE_C_COMPILER_TARGET "${TOOLCHAIN_TARGET}")
set(CMAKE_TRY_COMPILE_TARGET_TYPE STATIC_LIBRARY)
set(CMAKE_C_COMPILER_FORCED ON)
set(CMAKE_BUILD_WITH_INSTALL_RPATH ON)
set(RAPTOR_WINDOWS ON)
