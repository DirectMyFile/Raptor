function(load_config PATH)
  file(STRINGS "${PATH}" CONTENT)
  foreach(LINE ${CONTENT})
    string(REGEX REPLACE "^[ ]+" "" LINE ${LINE})
    string(REGEX MATCH "^[^=]+" KEY ${LINE})
    string(REPLACE "${KEY}=" "" VALUE ${LINE})
    if(KEY)
      set(${KEY} "${VALUE}")
    endif()
  endforeach()
endfunction()
